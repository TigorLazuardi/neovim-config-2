{
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "Markdown",
    "typescript",
    "javascript",
    "typescriptreact",
    "javascriptreact",
    "json",
    "markdown",
    "vim",
    "rust",
    "go",
    "yaml",
    "python",
    "html",
    "toml",
    "dart"
  ],
  "coc.preferences.formatOnInsertLeave": true,
  "coc.preferences.formatOnType": true,
  "languageserver": {
    "intelephense": {
      "command": "intelephense",
      "args": ["--stdio"],
      "filetypes": ["php"],
      "initializationOptions": {
        "storagePath": "/tmp/intelephense"
      }
    },
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    },
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "objc", "objcpp"],
      "rootPatterns": [".ccls", "compile_commands.json", ".vim/", ".git/", ".hg/"],
      "initializationOptions": {
        "cache": {
          "directory": "/tmp/ccls"
        },
        "clang": {
          "resourceDir": "/Library/Developer/CommandLineTools/usr/lib/clang/11.0.0",
          "extraArgs": [
            "-isystem",
            "/Library/Developer/CommandLineTools/usr/include/c++/v1",
            "-I",
            "/Applications/Xcode.app/Contents/Developer/Platforms/MacOSX.platform/Developer/SDKs/MacOSX.sdk/usr/include/"
          ]
        }
      }
    },
    "golang": {
      "command": "gopls",
      "filetypes": ["go"],
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"]
    }
  },
  "prettier.singleQuote": true,
  "prettier.trailingComma": "all",
  "prettier.semi": false,
  "prettier.jsxSingleQuote": true,
  "prettier.arrowParens": "always",
  "prettier.printWidth": 100,
  "prettier.tabWidth": 2,
  "python.jediEnabled": false,
  "python.formatting.provider": "autopep8",
  "signature.floatMaxWidth": 100,
  "codeLens.enable": false,
  "codeLens.separator": "⬅",
  "suggest.noselect": true,
  "suggest.floatEnable": true,
  "suggest.enablePreselect": false,
  "suggest.numberSelect": false,
  "diagnostic.refreshOnInsertMode": false,
  "diagnostic.displayByAle": true,
  "coc.preferences.enableFloatHighlight": true,
  "coc.preferences.hoverTarget": "float",
  "diagnostic.virtualText": true,
  "diagnostic.errorSign": ">>",
  "diagnostic.infoSign": ">>",
  "diagnostic.warningSign": "⚠",
  "diagnostic.messageTarget": "float",
  "diagnostic.level": "information",
  "diagnostic.checkCurrentLine": true,
  "diagnostic.highlightOffset": 1000,
  "diagnostic.virtualTextLineSeparator": " \\ ",
  "diagnostic.virtualTextLines": 3,
  "diagnostic.hintSign": ">>",
  "diagnostic.messageDelay": 500,
  "diagnostic.virtualTextPrefix": " ",
  "signature.enable": true,
  "pairs.enableBackspace": true,
  "suggest.languageSourcePriority": 99,
  "diagnostic.enable": true,
  "typescript.showUnused": true,
  "typescript.updateImportsOnFileMove.enable": true,
  "typescript.suggest.completeFunctionCalls": true,
  "typescript.suggest.autoImports": true,
  "coc.source.emoji.filetypes": ["markdown"],
  "coc.source.file.ignoreHidden": false,
  "coc.source.emoji.priority": 1,
  "rust-analyzer.lens.run": true,
  "rust-analyzer.completion.postfix.enable": true,
  "rust-analyzer.lens.enable": true,
  "rust-analyzer.inlayHints.chainingHints": true,
  "rust-analyzer.inlayHints.refreshOnInsertMode": true,
  "rust-analyzer.updates.channel": "stable"
}
